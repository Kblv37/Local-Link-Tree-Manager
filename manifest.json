{
  "manifest_version": 3,
  "name": "Local Link Tree Manager",
  "version": "1.2.0",
  "description": "Локальный древовидный менеджер ссылок",
  "permissions": [
    "storage",
    "downloads"
  ],
  "commands": {
    "open-search-popup": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Command+Q"
      },
      "description": "Открыть поиск в popup"
    }
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}